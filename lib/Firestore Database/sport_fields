{
  fieldId: string,        // ID sân
  sportId: string,        // Tham chiếu đến sports
  name: string,           // Tên sân (Sân A1, Sân B2...)
  address: string,        // Địa chỉ chi tiết
  location: {
    lat: number,          // Vĩ độ
    lng: number           // Kinh độ
  },
  pricePerHour: number,   // Giá thuê/giờ
  images: string[],       // Danh sách ảnh sân
  facilities: string[],   // Tiện ích (WC, Wifi...)
  rating: number,         // Điểm đánh giá trung bình
  status: 'available' | 'maintenance'
}